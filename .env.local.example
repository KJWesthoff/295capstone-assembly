# Local Development Environment Variables
# Copy this file to .env.local and update with your values
# DO NOT COMMIT .env.local TO VERSION CONTROL

# JWT Secret for local development (generate a secure random string)
JWT_SECRET=your-secure-jwt-secret-here

# Default Admin User Credentials (Development Only)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=your-secure-password

# Database Configuration
REDIS_URL=redis://localhost:6379

# PostgreSQL Database (for scan results persistence)
# Default connection for Docker Compose setup
DATABASE_URL=postgresql://rag_user:rag_pass@postgres:5432/rag_db

# Scanner Configuration
SCANNER_MAX_PARALLEL_CONTAINERS=5
SCANNER_CONTAINER_MEMORY_LIMIT=512m
SKIP_SCANNER_HEALTH_CHECK=true

# ==========================================
# MASTRA BACKEND CONFIGURATION (cedar-mastra)
# ==========================================

# PostgreSQL for vulnerability database (required for security analysis tools)
DATABASE_URL=postgresql://username:password@localhost:5432/security_db

# Scanner Service API (for scanner bridge tools and frontend)
# Use port 8000 to connect directly to FastAPI backend
SCANNER_SERVICE_URL=http://localhost:8000
SCANNER_USERNAME=admin
SCANNER_PASSWORD=your-scanner-password

# Frontend scanner service URL (must be NEXT_PUBLIC_ prefix)
NEXT_PUBLIC_SCANNER_SERVICE_URL=http://localhost:8000
NEXT_PUBLIC_SCANNER_USERNAME=admin
NEXT_PUBLIC_SCANNER_PASSWORD=your-scanner-password

# AI Model API Keys (at least one required)
OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...
# GOOGLE_AI_API_KEY=...

# Mastra Server Configuration
MASTRA_PORT=4111
MASTRA_OBSERVABILITY_ENABLED=true
